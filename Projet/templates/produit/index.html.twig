{% extends 'Bbase.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <div class="container-scroller">
        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
        <div class="container-fluid page-body-wrapper">
            {% block navbar %}
                {{ parent() }}
            {% endblock %}
            <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Produit</h4>
                                <div class="row">
                                    <div class="table-responsive">

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Idp</th>
                                                <th>Nomproduit</th>
                                                <th>Quantite</th>
                                                <th>Prix</th>
                                                <th>Image</th>
                                                <th>actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for produit in produits %}
                                            <tr>
                                                <td>{{ produit.idp }}</td>
                                                <td>{{ produit.nomproduit }}</td>
                                                <td>{{ produit.quantite }}</td>
                                                <td>{{ produit.prix }}</td>
                                                <td>{{ produit.image }}</td>
                                                <td>
                                                    <a href="{{ path('app_produit_show', {'idp': produit.idp}) }}">show</a>
                                                    <a href="{{ path('app_produit_edit', {'idp': produit.idp}) }}">edit</a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                    <a href="{{ path('app_produit_new') }}">Create new</a>
                                                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
