{% extends 'Bbase.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur</h1>

	<div class="container-scroller">
		{% block sidebar %}
			{{ parent() }}
		{% endblock %}
		<div class="container-fluid page-body-wrapper">
			{% block navbar %}
				{{ parent() }}
			{% endblock %}
			<div class="main-panel">
				<div class="content-wrapper">

					<table class="table">
						<tbody>
							<tr>
								<th>IdUser</th>
								<td>{{ utilisateur.idUser }}</td>
							</tr>
							<tr>
								<th>Nom</th>
								<td>{{ utilisateur.nom }}</td>
							</tr>
							<tr>
								<th>Prenom</th>
								<td>{{ utilisateur.prenom }}</td>
							</tr>
							<tr>
								<th>Email</th>
								<td>{{ utilisateur.email }}</td>
							</tr>
							<tr>
								<th>Telephone</th>
								<td>{{ utilisateur.telephone }}</td>
							</tr>
							<tr>
								<th>Image</th>
								<td>{{ utilisateur.image }}</td>
							</tr>
							<tr>
								<th>Pays</th>
								<td>{{ utilisateur.pays }}</td>
							</tr>
							<tr>
								<th>Ville</th>
								<td>{{ utilisateur.ville }}</td>
							</tr>
							<tr>
								<th>Password</th>
								<td>{{ utilisateur.password }}</td>
							</tr>
							<tr>
								<th>Typecompte</th>
								<td>{{ utilisateur.typecompte }}</td>
							</tr>
							<tr>
								<th>Code</th>
								<td>{{ utilisateur.code }}</td>
							</tr>
							<tr>
								<th>Admin</th>
								<td>{{ utilisateur.admin ? 'Yes' : 'No' }}</td>
							</tr>
							<tr>
								<th>Ban</th>
								<td>{{ utilisateur.ban ? 'Yes' : 'No' }}</td>
							</tr>
							<tr>
								<th>Banexpiration</th>
								<td>{{ utilisateur.banexpiration ? utilisateur.banexpiration|date('Y-m-d') : '' }}</td>
							</tr>
						</tbody>
					</table>
					<div class="row">
					<div class="col-9">
						<a href="{{ path('UsersList') }}">back to list</a>
					</div>
					<div class="col-3">
						{{ include('utilisateur/_delete_form.html.twig') }}
					</div>
					</div>

					{# <a href="{{ path('app_utilisateur_edit', {'idUser': utilisateur.idUser}) }}">edit</a> #}


				</div>
			</div>
		</div>
	</div>


{% endblock %}
