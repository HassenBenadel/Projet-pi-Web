{% extends 'Bbase.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <div class="container-scroller">
        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
        <div class="container-fluid page-body-wrapper">
            {% block navbar %}
                {{ parent() }}
            {% endblock %}
            <div class="main-panel">
                <div class="content-wrapper">
                    <h1>Commentaire index</h1>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Userid</th>
                            <th>Commentateur</th>
                            <th>Contenu</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for commentaire in commentaires %}
                            <tr>
                                <td>{{ commentaire.id }}</td>
                                <td>{{ commentaire.userid }}</td>
                                <td>{{ commentaire.commentateur }}</td>
                                <td>{{ commentaire.contenu }}</td>
                                <td>
                                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">show</a>
                                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a href="{{ path('app_commentaire_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
