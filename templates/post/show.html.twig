{% extends 'Bbase.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="container-scroller">
        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
        <div class="container-fluid page-body-wrapper">
            {% block navbar %}
                {{ parent() }}
            {% endblock %}
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="d-md-flex h-md-100 align-items-center">
                        <!-- First Half -->
                        <div class="col-md-6 p-0 bg-indigo h-md-100">
                            <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center">
                                <div class="logoarea pt-5 pb-5">
                                    <h1>Post</h1>
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th>ID Post</th>
                                                <td>{{ post.id }}</td>
                                            </tr>
                                            <tr>
                                                <th>ID Utilisateur</th>
                                                <td>{{ post.userid }}</td>
                                            </tr>
                                            <tr>
                                                <th>Titre</th>
                                                <td>{{ post.titre }}</td>
                                            </tr>
                                            <tr>
                                                <th>Description</th>
                                                <td>{{ post.description }}</td>
                                            </tr>
                                            <tr>
                                                <th>Contenu</th>
                                                <td>{{ post.contenu }}</td>
                                            </tr>
                                            <tr>
                                                <th>Datecreation</th>
                                                <td>{{ post.datecreation ? post.datecreation|date('Y-m-d') : '' }}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a href="{{ path('app_post_index') }}" class="badge badge-outline-success">Retourner</a>
                                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="badge badge-outline-warning">Modifier</a>
                                </div>
                            </div>
                        </div>

                        <!-- Second Half -->
                        <div class="col-md-6 p-0 h-md-100 loginarea">
                            <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
                                <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="erreur" width="400" height="400">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
