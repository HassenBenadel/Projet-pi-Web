{% extends 'base.html.twig' %}

{% block title %}Creation de Post{% endblock %}

{% block body %}
    {% block navBar %}
        {{ parent() }}
    {% endblock %}
    <main id="main">
        <section class="breadcrumbs">
            <div class="container">
                <div>
                    <h2>Blog</h2>
                    <ol>
                        <li>Acceuil</li>
                        <li>Blog</li>
                        <li>Ajouter Post</li>
                    </ol>
                </div>
            </div>
        </section>
        <section id="blog" class="blog">
            <div class="container animate__animated animate__fadeInUp">
                <div class="container-scroller">
                    <div class="container-fluid page-body-wrapper">
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <span class="float-end">
                                                <form method="post" action="{{ path('app_postFront_delete', {'id': post.id, 'idU': 1}) }}" onsubmit="return confirm('Vous voulez supprimer cette post?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                                    <button class="btn btn-danger btn-fw">Supprimer</button>
                                                </form>
                                            </span>
                                            <h4 class="card-title">Modifer un Post</h4>
                                            <p class="card-description"> Completez la formule pour modifier un Post </p>
                                            {{ form_start(form,{'attr' : {'novalidate' : 'novalidate'}}) }}
                                            <div class="form-group">
                                                <label>Titre</label>
                                                {{form_widget(form.titre, {'attr':{'class': 'form-control'}})}}
                                                {{form_errors(form.titre, {'attr':{'class': 'text-danger'}})}}
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail3">Description</label>
                                                {{form_widget(form.description, {'attr':{'class': 'form-control', 'rows': 5} })}}
                                                {{form_errors(form.description, {'attr':{'class': 'text-danger'} })}}
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword4">Contenu</label>
                                                {{form_widget(form.contenu, {'attr':{'class': 'form-control', 'rows': 5}})}}
                                                {{form_errors(form.contenu, {'attr':{'class': 'text-danger'} })}}
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputCity1">Image</label>
                                                {{form_widget(form.image, {'attr':{'class': 'form-control'}})}}
                                            </div>
                                            <br>
                                            {{ form_widget(form.Modifier, { 'attr': {'class':'btn btn-primary mr-2' }})}}
                                            {{ form_widget(form.Annuler, { 'attr': {'class':'btn btn-dark'}})}}
                                            {{form_end(form)}}
                                            <a href="{{ path('app_postFront_MesBlogs', {'idU': 1}) }}" class="btn customBtn float-end">Retourner</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}