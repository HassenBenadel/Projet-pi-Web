{% extends 'Bbase.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container-scroller">
        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
        <div class="container-fluid page-body-wrapper">
            {% block navbar %}
                {{ parent() }}
            {% endblock %}
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                Liste des Postes
                                <span class="float-right"><a href="{{ path('app_post_new') }}" class="btn btn-success btn-fw">Ajouter Post</a></span>
                            </h4>
                            <div class="row">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Userid</th>
                                            <th>Titre</th>
                                            <th>Image</th>
                                            <th>Description</th>
                                            <th>Contenu</th>
                                            <th>Datecreation</th>
                                            <th>actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for post in posts %}
                                            <tr>
                                                <td>{{ post.id }}</td>
                                                <td>{{ post.userid }}</td>
                                                <td>{{ post.titre }}</td>
                                                <td>{{ post.image }}</td>
                                                <td>{{ post.description }}</td>
                                                <td>{{ post.contenu }}</td>
                                                <td>{{ post.datecreation ? post.datecreation|date('d-m-Y') : '' }}</td>
                                                <td>
                                                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="badge badge-outline-success">Afficher</a>
                                                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="badge badge-outline-warning">Modifier</a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="8">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
